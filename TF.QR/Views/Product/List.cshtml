@model List<TF.QR.DbProduct>
@{
    
}


<!DOCTYPE html>
<html>
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>产品中心</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
    <link rel="stylesheet" href="//cdn.bootcss.com/weui/1.1.1/style/weui.min.css">
    <link rel="stylesheet" href="//cdn.bootcss.com/jquery-weui/1.0.1/css/jquery-weui.min.css">
    <link href="//cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
</head>
<body ontouchstart>
    <div class="weui-panel weui-panel_access">
        <div class="weui-panel__hd">产品中心</div>
        <div class="weui-panel__bd">
            @foreach (var product in Model)
            {
                <a href="/P/@product.Id" class="weui-media-box weui-media-box_appmsg">
                    <div class="weui-media-box__hd">
                        <img class="weui-media-box__thumb" src="/data/thumbfile?filepath=@product.Photos&w=100">
                    </div>
                    <div class="weui-media-box__bd">
                        <h4 class="weui-media-box__title">@product.ProductName</h4>
                        <p class="weui-media-box__desc" style="
    text-align: right;
    font-size: 20px;
    color: red;
    font-weight: bold;
">￥@product.Cost</p>
                    </div>
                </a>
            }
            
        </div>
        @*<div class="weui-panel__ft">
            <a href="javascript:void(0);" class="weui-cell weui-cell_access weui-cell_link">
                <div class="weui-cell__bd">查看更多</div>
                <span class="weui-cell__ft"></span>
            </a>
        </div>*@
    </div>
</body>
</html>
